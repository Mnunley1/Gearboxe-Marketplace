{
  "name": "gearboxe-market-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter @car-market/web",
    "dev:admin": "turbo run dev --filter @car-market/admin",
    "dev:convex": "pnpm --filter @car-market/convex dev",
    "build": "turbo run build",
    "build:web": "turbo run build --filter @car-market/web",
    "build:admin": "turbo run build --filter @car-market/admin",
    "start": "turbo run start",
    "start:web": "turbo run start --filter @car-market/web",
    "start:admin": "turbo run start --filter @car-market/admin",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.1.0",
    "typescript": "^5",
    "ultracite": "6.0.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec biome check --write"
    ],
    "*.{json,md}": [
      "pnpm exec biome format --write"
    ]
  }
}
